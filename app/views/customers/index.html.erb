<h2>All Customers Page</h2>
<div class="create-customer">
<h3>Add a Customer</h3>
  <%= form_for @customer do |form| %>
    <%= render "error_messages", target: @customer %>
    <div>
      <%= form.label :name, "Customer Name" %>
      <%= form.text_field :name %>
    </div>
    <div class="form-yes-no">
      <p>Is this a federal customer?</p>
      <%= form.radio_button :federal, true %><%= form.label :federal, "Yes" %>
      <%= form.radio_button :federal, false %><%= form.label :federal, "No" %>
    </div>
    <div>
      <%= form.submit :submit %>
    </div>
  <% end %> 
</div>

<h3>Registered Customers</h3>
<ul>
  <% @customers.each do |customer| %>
    <li><%= link_to customer.name, customer %> (<%= customer.performances.count %> Performances)</li>
  <% end %>
