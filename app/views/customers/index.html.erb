<h2>All Customers Page</h2>

<% if current_user.admin? %>
  <h3>Add a Customer</h3>

  <%= form_for @customer do |form| %>
    <%= render "error_messages", target: @customer %>
    <div>
      <%= form.label :name, "Customer Name" %>
      <%= form.text_field :name %>
    </div>
    <div>
      <%= form.label :federal, "This is a Federal Agency." %>
      <%= form.check_box :federal %>
    </div>
    <div>
      <%= form.submit :submit %>
    </div>
  <% end %> 
<% end %>

<h3>Registered Customers</h3>
<p>This list is maintained and updated by the site administrator.</p>
<ul>
  <% @customers.each do |customer| %>
    <li><%= link_to customer.name, customer %></li>
  <% end %>
