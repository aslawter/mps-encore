<h3>Assign a soliciation to the performance: <%= @performance.title %></h3>
<div>
  <%= form_for [@performance, @opportunity] do |form| %>
    <%= render "error_messages", target: @opportunity %>
    <div>
      <%= form.label :solicitation_id, "Solicitation Title" %>
      <%= form.collection_select :solicitation_id, @solicitations, :id, :title, include_blank: "Select One" %>
    </div>
    <div>
      <%= form.submit :submit %>
    </div>
  <% end %>
</div>
