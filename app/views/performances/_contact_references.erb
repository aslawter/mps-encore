<div class="references-container">
  <div>
    <%= link_to "Add a new reference", [:new, @performance, :performance_contact] %>
  </div>

  <div class="customer-references">
    <h3>Customer References</h3>
    <table>
      <tr>
        <th></th>
        <th>Supervisor/Manager | add/change</th>
        <th>Contracting Officer Representative | add/change</th>
      </tr>
      <tr>
        <td>Name</td>
        <td><%= @performance.contact_with_role("Supervisor").full_name %></td>
        <td><%= @performance.contact_with_role("Contracting Officer Technical Representative").full_name %></td>
      </tr>
      <tr>
        <td>Email</td>
        <td><%= @performance.contact_with_role("Supervisor").email %></td>
        <td><%= @performance.contact_with_role("Contracting Officer Technical Representative").email %></td>
      </tr>
      <tr>
        <td>Phone</td>
        <td><%= @performance.contact_with_role("Supervisor").phone %></td>
        <td><%= @performance.contact_with_role("Contracting Officer Technical Representative").phone %></td>
      </tr>
      <tr>
        <td>Fax</td>
        <td><%= @performance.contact_with_role("Supervisor").fax %></td>
        <td><%= @performance.contact_with_role("Contracting Officer Technical Representative").fax %></td>
      </tr>
    </table>
  </div>

  <div class="partner-refercence">
    <% if @performance.prime_contractor %>
      <h3>Partner References</h3>
    <% else %>
      <h3>Prime Contractor References</h3>
    <% end %>
    <table>
      <tr>
        <th></th>
        <th>Company Representative | add/change</th>
        <th>Other | add/change</th>
      </tr>
      <tr>
        <td>Name</td>
        <td><%= @performance.contact_with_role("Company Representative").full_name %></td>
        <td><%= @performance.contact_with_role("Other").full_name %></td>
      </tr>
      <tr>
        <td>Email</td>
        <td><%= @performance.contact_with_role("Company Representative").email %></td>
        <td><%= @performance.contact_with_role("Other").email %></td>
      </tr>
      <tr>
        <td>Phone</td>
        <td><%= @performance.contact_with_role("Company Representative").phone %></td>
        <td><%= @performance.contact_with_role("Other").phone %></td>
      </tr>
      <tr>
        <td>Fax</td>
        <td><%= @performance.contact_with_role("Company Representative").fax %></td>
        <td><%= @performance.contact_with_role("Other").fax %></td>
      </tr>
    </table>
  </div>
</div>
